# API Configuration
API_KEY=your_api_key_here_change_in_production
ENVIRONMENT=development

# Convex Database
CONVEX_DEPLOYMENT_URL=https://your-project.convex.cloud
CONVEX_DEPLOY_KEY=your_convex_deploy_key_here

# DeepSeek AI Provider
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL_CHAT=deepseek-chat
DEEPSEEK_MODEL_VISION=deepseek-vl

# GitHub Integration
GITHUB_TOKEN=your_github_ssh_token_here
GITHUB_DEFAULT_REPO=your-org/your-repo

# Figma Integration
FIGMA_ACCESS_TOKEN=your_figma_personal_access_token_here

# Jira Integration
JIRA_DOMAIN=yourcompany.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your_jira_api_token_here
JIRA_PROJECT_KEY=CONV

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#growth-team
SLACK_LEADERSHIP_CHANNEL=#leadership

# Anomaly Detection Configuration
MIN_DROP_PERCENT=12.0
MIN_SAMPLE_SIZE=100
SIGMA_THRESHOLD=2.0
ALERT_COOLDOWN_MINUTES=5

# Background Jobs
MONITORING_INTERVAL_MINUTES=2
MEASUREMENT_CHECK_HOURS=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Demo Mode
DEMO_MODE=true
DEMO_EVENT_RATE=10  # Events per minute in demo mode
